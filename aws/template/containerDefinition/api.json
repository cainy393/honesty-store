[
    {
        "name": "container",
        "image": "${image}",
        "cpu": 128,
        "memory": 128,
        "essential": true,
        "portMappings": [
            {
                "containerPort": 3000,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "BASE_URL",
                "value": "${baseUrl}"
            },
            {
                "name": "SERVICE_TOKEN_SECRET",
                "value": "${serviceSecret}"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${logGroup}",
                "awslogs-region": "eu-west-1",
                "awslogs-stream-prefix": "container"
            }
        }
    }
]
