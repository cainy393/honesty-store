          "Ref": "HSPrefix"
        },
        "HSDomainName": {
          "Ref": "HSDomainName"
        },
        "ServicePrefix": {
          "Ref": "ServicePrefix"
        }
      }
    }
  },
  "itemLambda": {
    "Type": "AWS::Lambda::Function",
    "Condition": "CreateLambdaitem",
    "Properties": {
      "Code": {
        "S3Bucket": {
          "Fn::Join": [
            "",
            [
              "honesty-store-lambdas-",
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "S3Key": "item.zip"
      },
      "FunctionName": {
        "Fn::Join": [
          "",
          [
            {
              "Ref": "ServicePrefix"
            },
            "-",
            "item"
          ]
        ]
      },
      "Timeout": "10",
      "Role": {
        "Fn::Join": [
          "",
          [
            "arn:aws:iam::812374064424:role/",
            {
              "Ref": "HSPrefix"
            },
            "-lambda-dynamo-rw"
          ]
        ]
      },
      "Handler": "lib/bundle-min.handler",
      "Environment": {
        "Variables": {
          "BASE_URL": {
            "Fn::Join": [
              "",
              [
                "https://",
                {
                  "Ref": "HSDomainName"
                }
              ]
            ]
          },
          "LAMBDA_BASE_URL": {
            "Fn::Join": [
              "",
              [
                "https://",
                {
                  "Ref": "HSDomainName"
                }
              ]
            ]
          },
          "SERVICE_TOKEN_SECRET": {
            "Ref": "ServiceSecret"
          },
          "LIVE_STRIPE_KEY": "",
          "TEST_STRIPE_KEY": "",
          "SLACK_CHANNEL_PREFIX": "",
          "USER_TOKEN_SECRET": "",
          "TABLE_NAME": {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "ServicePrefix"
                },
                "-",
                "item"
              ]
            ]
          }
        }
      },
      "Runtime": "nodejs6.10",
      "TracingConfig": {
        "Mode": "Active"
      }
    }
  },
